.InputRange-slider
  appearance none
  background #FFF
  border 3px solid color-3
  border-radius 100%
  cursor -webkit-grab
  display block
  height 1.2rem
  margin-left -0.5rem
  margin-top -0.85rem
  outline none
  position absolute
  top 50%
  transition -webkit-transform 0.3s ease-out, box-shadow 0.3s ease-out
  transition transform 0.3s ease-out, box-shadow 0.3s ease-out
  box-shadow 0px 12px 24px 0px rgba(0, 0, 0, 0.1)
  width 1.2rem
  &:active, &:focus
    transform scale(.9)
    background #e2e2e2
    cursor -webkit-grabbing
  .InputRange-slider:focus
    box-shadow 0 0 0 5px rgba(63, 81, 181, 0.2)
  .InputRange.is-disabled .InputRange-slider
    background #cccccc
    border 1px solid #cccccc
    box-shadow none
    transform none
  &:before
    content ""
    z-index 20
    width 3px
    height 8px
    background color-3
    position absolute
    top 3px
    left 8px
    border-radius 4px
  &:after
    content ""
    width 9px
    height 3px
    background color-3
    position absolute
    top 9px
    left 8px
    border-radius 4px

.InputRange-sliderContainer
  transition left 0.3s ease-out

.InputRange-label
  color color-3
  font-weight bold
  font-size 1rem
  text-transform uppercase

.InputRange-label--min,
.InputRange-label--max
  bottom -1.4rem
  position absolute
  display  none

.InputRange-label--min
  left 0

.InputRange-label--max
  right 0

.InputRange-label--value
  position absolute
  top 0.9rem

.InputRange-labelContainer
  left -50%
  position relative
  cursor initial
  .InputRange-label--max .InputRange-labelContainer
    left 50%

.InputRange-track
  background #eeeeee
  border-radius 0.3rem
  display block
  height 0.4rem
  position relative
  transition left 0.3s ease-out, width 0.3s ease-out
  .InputRange.is-disabled .InputRange-track
    background #eeeeee

.InputRange-track--container
  left 0
  margin-top -0.15rem
  position absolute
  right 0
  top 50%

.InputRange-track--active
  background color-3

.InputRange
  cursor pointer
  height 1rem
  position relative
  width 100%
  margin-left auto
  margin-right auto
  
