.config-package
  position relative
  .btn
    font-weight bolder
    text-transform none
    position relative
  .btn-back
    background transparent
    padding 7px 15px 7px 20px
    color gray-silver
    transition background .2s
    font-weight bold
    .arrow-back
      width 20px
      height 20px
      fill gray-silver
      position absolute
      left -2px
      top 5px
      margin-right 10px
      transition all .2s
    &:hover, &:active, &:focus
      .arrow-back
        transform translateX(-2px)

  .title-package--container
    margin-top 11px
    .input-title-package
      font-size 30px
      color gray-silver
      transition all .3s
      margin-left -7px
      padding-left 7px
      width 101%
      height 35px
      overflow hidden

      &:hover, &:active, &:focus
        background gray-silver-bg
      &:focus
        padding-left 20px
        width 98.9%
        cursor auto
    .title-edit-icon
      margin-top 5px
      margin-right 5px
      svg
        fill gray-silver

  .description-package--container
    .input-description-package
      color gray-light
      font-size 16px
    margin-bottom 19px
  .card-delete
    position absolute
    right -6px
    top -11px
    background color-2
    border-radius 100%
    width 30px
    height 30px
    text-align center
    cursor pointer 
    transition all .3s ease
    &:hover, &:active, &:focus
      width 70px
      border-radius 200px
      text-align right
      .trash-card
        transform scale(1.1)
      label
        opacity 1
    label
      float left
      color #FFF
      margin-top 8px
      margin-left 9px
      opacity 0
    .trash-card
      width 18px
      height 18px
      fill #FFF
      margin-top 5px
      transition all .2s ease
      float right 
      margin-right 5px 

.load-packages-container
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  z-index 10000
  opacity 0
  visibility hidden
  &.loading
    opacity 1
    visibility visible
    background #FFF